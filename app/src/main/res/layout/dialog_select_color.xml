<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/choose"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/popupText"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@color/popupText">
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/popupText"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:weightSum="4"
        android:background="@drawable/pop_up_gradient"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:tag="#ffffff"
            android:id="@+id/iv_b1"
            android:layout_gravity="center"
            android:src="@drawable/square_white"
            android:layout_width="100px"
            android:layout_height="100px"/>
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:layout_marginLeft="15dp"
            android:tag="#ffe57f"
            android:id="@+id/iv_b2"
            android:layout_gravity="center"
            android:src="@drawable/square_ffad33"
            android:layout_width="100px"
            android:layout_height="100px" />
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:layout_marginLeft="15dp"
            android:tag="#69f0ae"
            android:id="@+id/iv_b3"
            android:layout_gravity="center"
            android:src="@drawable/square_00ffbf"
            android:layout_width="100px"
            android:layout_height="100px" />
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:tag="#81d4fa"
            android:id="@+id/iv_b4"
            android:layout_gravity="center"
            android:src="@drawable/square_66d9ff"
            android:layout_width="100px"
            android:layout_height="100px" />

    </LinearLayout>
</LinearLayout>